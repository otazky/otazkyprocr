<% content_for :body_content_title do %>
  <%= @notice.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @notice.title %>
    </p>
  </section>
  <section>
    <h1>Content</h1>
    <p>
      <%=raw @notice.content %>
    </p>
  </section>
  <section>
    <h1>Link</h1>
    <p>
      <%=raw @notice.link %>
    </p>
  </section>
  <section>
    <h1>Img</h1>
    <p>
      <%= image_fu @notice.img, nil %>
    </p>
  </section>
  <section>
    <h1>Type</h1>
    <p>
      <%=raw @notice.type %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="notices">
      <% @notices.each do |notice| %>
        <li>
          <%= link_to notice.title, refinery.notices_notice_path(notice) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
