<legend>Party</legend>

<div class="field">
  <%= label_tag 'party_name', 'Party name' %>
  <%= text_field_tag 'party[name]' %>
  <%= select 'party', 'id' , Refinery::Parties::Party.all.collect{ |e| [e.name, e.subject_id] }%>
</div>

<div class="select">
  <%= label_tag 'election_subject_election', 'Volby' %>
  <%= select 'election_subject_election', 'election_id', @elections.collect{ |e| [e.election_type.name, e.id] } %>
</div>