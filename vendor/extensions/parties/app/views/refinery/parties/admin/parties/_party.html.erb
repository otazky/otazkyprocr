<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(party) -%>">
  <span class='title'>
    <%= party.name %>
	<i style='color:#aaaaaa'>(<%= party.keeper %>)</i>

  </span>
  <span class='actions'>
    
    <%= link_to refinery_icon_tag("application_go.png"), refinery.parties_party_path(party),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_parties_admin_party_path(party),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.parties_admin_party_path(party),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => party.name),
        :method => :delete %>
  </span>
</li>