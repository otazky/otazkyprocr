<%= form_for [refinery, :politicians_admin, @politician] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @politician,
              :include_object_name => true %>

  
  <div class='field'>
    <%= f.label :firstname -%>
    <%= f.text_field :firstname -%>

  </div>
  
  <div class='field'>
    <%= f.label :lastname -%>
    <%= f.text_field :lastname  -%>
  </div>

  <div class="select">
    <%= f.label :keeper_id, 'Keeper' %>
    <%= f.select :keeper_id, @keepers.collect{ |k| [k.email, k.id] } %>
  </div>

  <div class="select">
    <%= label_tag :election_subject_election_election_id, 'Volby' %>
    <%= select :election_subject_election, :election_id,
          @elections.collect {|e| [e.election_type.name + ' ' + e.held.strftime('%Y'), e.id] } %>
  </div>
  
  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.politicians.admin.politicians.politician'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @politician.firstname) %>
<% end -%>
