<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(politician) -%>">
  <span class='title'>
    <%= politician.firstname %> <%= politician.lastname %>
	<i style='color:#aaaaaa'>(<%= politician.keeper %>)</i>
  </span>
  <span class='actions'>
    
    <%= link_to refinery_icon_tag("application_go.png"), refinery.politicians_politician_path(politician),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_politicians_admin_politician_path(politician),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.politicians_admin_politician_path(politician),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => politician.firstname),
        :method => :delete %>
  </span>
</li>