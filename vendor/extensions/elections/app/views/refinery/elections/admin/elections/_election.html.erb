<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(election) -%>">
  <span class='title'>
    <%= election.election_type.name %> <%= election.held %>   <%= raw("| <i style='color:#baaa88'>done</i>") if election.done %>
	<%= raw("| <i style='color:#baaa88'>q homepage</i>") if election.homepage %>

  </span>
  <span class='actions'>
    
    <%= link_to refinery_icon_tag("application_go.png"), refinery.elections_election_path(election),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_elections_admin_election_path(election),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.elections_admin_election_path(election),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => "#{election.election_type.name} #{election.held}"),
        :method => :delete %>
  </span>
</li>