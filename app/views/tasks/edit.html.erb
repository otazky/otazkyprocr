<%= form_for([@citizen, @question, @task], url:citizen_question_task_path, html:{ class:'well' }) do |f| %>

    <% if @task.errors.any? %>
        <div class="error_messages">
          <div class="alert alert-error">
            <strong>Formulář byl vyplněn chybně. Opravte prosím následující chyby:</strong>
          </div>
        </div>
    <% end %>

    <fieldset>
      <legend>Upravit úkol</legend>
      <div class="field">
        <%= f.label :content, 'Zadání' %>
        <%= f.text_field :content %>
        <span class="fieldWithErrors"><%= @task.errors[:content].first %></span>

      </div>
    </fieldset>

    <div class="actions">
      <%= f.submit 'Uložit', :class => 'btn btn-primary' %>
    </div>
<% end %>