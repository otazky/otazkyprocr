<section id="account">
	<h1>Můj účet</h1>

	<section id="account_personal">
		<h2 class="pull-left">Osobní údaje</h2>
		<div class="pull-right">
			<%= link_to 'Upravit', main_app.edit_citizen_path(@citizen), class: 'btn btn-primary' %>
		</div>
		<table id="account_personal_table" class="clear">
			<tr>
				<th>Jméno:</th>
				<td><%= @citizen.firstname.capitalize %></td>
			</tr>
			<tr>
				<th>Příjmení:</th>
				<td><%= @citizen.lastname.capitalize %></td>
			</tr>
			<tr>
				<th>Okres:</th>
				<td><%= @citizen.county.name %></td>
			</tr>
			<tr>
				<th>Pohlaví:</th>
				<td>
					<%= 'Muž' if @citizen.gender == 'male' %>
					<%= 'Žena' if @citizen.gender == 'female' %>
				</td>
			</tr>
			<tr>
				<th>Věk:</th>
				<td><%= @citizen.age %></td>
			</tr>			
		</table>
	</section>

	<hr>

	<section id="account_questions">
		<h2>Strategické otázky</h2>

		<% @citizen.citizens_questions.active.order('created_at ASC').each do |citizen_question| %>
            <% question = citizen_question.question %>
			<article id="question_<%= question.id %>">
				<h3 class="pull-left">
					<%= truncate(question.title, length: 100, separator: ' ') %>					
				</h3>				
				<div class="pull-right">
					<% if @citizen.is_team_manager_for?(question.id) == true %>
						<%= form_tag(refinery.root_path+'mark-question-as-solved/'+question.id.to_s+'/') %>						
							<%= hidden_field_tag 'citizen_id', @citizen.id %>
							<%= submit_tag 'Označit za vyřešenou', class: 'btn btn-success' if question.done != true %>
						</form>
						<%= link_to 'Přidat úkol', main_app.new_citizen_question_task_path(@citizen, question), class: 'btn btn-primary' %>
					<% end %>
				</div>
				<h4 class="clear"><%= question.subject.firstname %> <%= question.subject.lastname %></h4>
				<h5>Spolupracovník: <%= @citizen.get_partner_for(question.id).email if @citizen.get_partner_for(question.id) %></h5>
				<table id="account_question_table">
					<tr>
						<th>Přislíbených hodin:</th>
						<td><%= citizen_question.hours %>
						<td>
                            <% if citizen_question.hours == 0 %>
							    <%= link_to 'Navýšit hodiny', edit_citizens_question_path(citizen_question.id), class: 'btn btn-primary' %>
                            <% else %>
                                <%= link_to 'Přenést hodiny', "/citizens_questions/#{citizen_question.id}/move", class: 'btn btn-primary' %>
                            <% end %>
						</td>
					</tr>
					<tr>
						<th>Odpracovaných hodin:</th>
						<td><%= citizen_question.hours_done %>
						<td> </td>
					</tr>					
				</table>

				<% if question.tasks.any? %>
					<h5>Úkoly</h5>
					<ul id="question_tasks">
					<% question.tasks.each do |task| %>
						<li>
							<%= task.content %>
                            <%="(#{task.hours}h)" if task.hours>0 %>
                            <%= link_to('Upravit', main_app.edit_citizen_question_task_path(@citizen, question, task)) if @citizen.is_team_manager_for?(question.id) %>
                            <%= link_to('Odstranit', [@citizen, question, task], method: :delete, confirm: 'Jste si jistý(á)?') if @citizen.is_team_manager_for?(question.id) %>

                            <%= link_to('pridat podukol', main_app.new_citizen_question_task_subtask_path(@citizen, question, task)) %>


                            <%= link_to('přijímám bez výhrad',
                                        {:action=>'new', :controller=>'citizens_tasks', :citizen_id=>@citizen.id, :task_id=>task.id },
                                         :remote=>true , :class=>'new_citizen_task_dialog'          ) %>
                          <%= link_to('přijímám se změnou',
                                      {:action=>'new', :controller=>'citizens_tasks',:change=>true, :citizen_id=>@citizen.id, :task_id=>task.id },
                                      :remote=>true , :class=>'new_citizen_task_dialog' , :title=>'přijímám se změnou'         ) %>

                          <% if task.subtasks.any?%>
                                <ul id="task_subtasks">
                                    <% task.subtasks.each do |subtask|%>
                                           <li><%=subtask.content %></li>
                                    <%end%>
                                </ul>
                          <% end %>

						</li>
					<% end %>
					</ul>
				<% end %>
			</article>

			<% unless @questions.last == question || @citizen.questions.count == 1 %>
				<hr>
			<% end %>
		<% end %>	
	</section>
</section>  


<div id="dialog_citizen"></div>