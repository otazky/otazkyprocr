<section id="politician-detail">
  <h2><%= @politician.firstname + ' ' + @politician.lastname %></h2>

  <%= image_fu @politician.photo, "200x230#" %>
  
  <p>
  <ul>
  <% @politician.questions.active.each do |question| %>
    <li><%= link_to question.title, main_app.question_path(question) %></li>
  <% end %>
  </ul>
  </p>
</section>
