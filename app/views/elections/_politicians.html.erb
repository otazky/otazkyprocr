<% if @election.subjects.any? %>
    <ul>
      <% @parties.each do |party| %>
          <li>
			<% if party.questions.any?                  %>
				<%= link_to party.name, party_path(party.id) %>
			<%else%>
				<%= party.name %>
			<%end%>
		  </li>
      <% end %>
      <% @politicians.each do |politician| %>
          <li>	<% if politician.questions.any?                  %>
					<%= link_to politician.full_name, main_app.politician_path(politician.id) %>
				<%else%>
					<%= politician.full_name %>
				<%end%>
				</li>
      <% end %>
    </ul>
<% end %>